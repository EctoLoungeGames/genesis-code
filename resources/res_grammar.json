{
    "scopeName": "source.res",
    "patterns": [
        {
            "include": "#resource"
        }
    ],
    "repository": {
        "resource": {
            "patterns": [
                {
                    "include": "#resourceType"
                },
                {
                    "include": "#resourceName"
                },
                {
                    "include": "#fileName"
                },
                {
                    "include": "#width"
                },
                {
                    "include": "#height"
                },
                {
                    "include": "#compression"
                },
                {
                    "include": "#regions"
                },
                {
                    "include": "#comment"
                },
                {
                    "include": "#timing"
                },
                {
                    "include": "#mapopt"
                },
                {
                    "include": "#mapbase"
                },
                {
                    "include": "#timesprt"
                },
                {
                    "include": "#collision"
                },
                {
                    "include": "#optsprt"
                },
                {
                    "include": "#opt_level"
                },
                {
                    "include": "#optionsxgm"
                },
                {
                    "include": "#drivername"
                },
                {
                    "include": "#outrate"
                },
                {
                    "include": "#align"
                },
                {
                    "include": "#tileset_id"
                }
            ]
        },
        "resourceType": {
            "match": "BITMAP|PALETTE|TILESET|TILEMAP|MAP|IMAGE|SPRITE|XGM|WAV|BIN|ALIGN|UNGROUP",
            "name": "keyword.resourceType"
        },
        "resourceName": {
            "match": "\\.",
            "name": "variable.parameter.resource.name"
        },
        "tileset_id": {
            "match": "\\.",
            "name": "variable.parameter.resource.name"
        },
        "fileName": {
            "begin": "\"",
            "end": "\"",
            "name": "string.quoted.doble.filename"
        },
        "width": {
            "patterns": [
                {
                    "include": "#number"
                }
            ]
        },
        "number": {
            "match": "([0-9]+\\\n)|(\\ +[0-9]+\\ )|(\t+[0-9]+\\ )|(\\ +[0-9]+\t)|(\t+[0-9]+\t)",
            "name": "constant.numeric.number"
        },
        "height": {
            "patterns": [
                {
                    "include": "#number"
                }
            ]
        },
        "compression": {
            "match": "BEST|AUTO|NONE|APLIB|FAST|LZ4W",
            "name": "keyword.control.compresion"
        },
        "comment": {
            "begin": "\\#",
            "end": "\\\n",
            "name": "comment.line.number-sign"
        },
        "regions": {
            "begin": "(\\#region)|(\\#endregion)|(\\#pragma region)|(\\#pragma endregion)",
            "end": "\\\n",
            "name": "markup.italic"
        },
        "timing": {
            "match": "AUTO|NTSC|PAL",
            "name": "keyword.control.timing"
        },
        "mapopt": {
            "match": "NONE|ALL|DUPLICATE",
            "name": "keyword.operator.mapopt"
        },
        "mapbase": {
            "patterns": [
                {
                    "include": "#number"
                }
            ]
        },
        "timesprt": {
            "patterns": [
                {
                    "include": "#number"
                }
            ]
        },
        "collision": {
            "match": "CIRCLE|BOX",
            "name": "support.function.collision"
        },
        "optsprt": {
            "match": "BALANCED|TILE|SPRITE|NONE",
            "name": "support.class.optsprt"
        },
        "drivername": {
            "match": "PCM|2ADPCM|4PCM|XGM",
            "name": "keyword.control.drivername"
        },
        "outrate": {
            "patterns": [
                {
                    "include": "#number"
                }
            ]
        },
        "opt_level": {
            "patterns": [
                {
                    "include": "#number"
                }
            ]
        },
        "letters": {
            "match": "\\.",
            "name": "variable.parameter.letters"
        },
        "optionsxgm": {
            "patterns": [
                {
                    "include": "#letters"
                }
            ]
        }
    }
}